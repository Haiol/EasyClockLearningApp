<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".LearningClockActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Life_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/heart1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/heart"/>
        <ImageView
            android:id="@+id/heart2"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/heart"/>
        <ImageView
            android:id="@+id/heart3"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/heart"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ClockImg_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:gravity="center"
        android:weightSum="100"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:weightSum="100"
            android:layout_weight="25">
            <ImageView
                android:id="@+id/cat1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/cat_1"
                android:layout_weight="65"/>
        </LinearLayout>


        <com.lovehp30.easyclocklearningapp.ClockView
            android:id="@+id/clockBoard"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:weightSum="100"
            android:layout_weight="25">
            <ImageView
                android:id="@+id/cat2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/cat_1"
                android:layout_weight="65"/>
        </LinearLayout>


    </LinearLayout>

<!--    &#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LearningBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="8">
        <Button
            android:id="@+id/answer1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickBtnEvent"
            android:layout_weight="35"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/answer2"
            android:layout_width="0dp"
            android:onClick="clickBtnEvent"
            android:layout_height="match_parent"
            android:layout_weight="35"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/NavLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:weightSum="90"
        android:layout_weight="9">
        <Button
            android:id="@+id/homeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/preBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:text="◀"
            android:layout_weight="15"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/nxtBtn"
            android:layout_width="0dp"
            android:text="▶"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="15"/>
    </LinearLayout>

</LinearLayout>